{
  "name": "news-feed-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm-run-all clean transpile",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=development npm-run-all build server",
    "dev:watch": "nodemon",
    "prod": "NODE_ENV=production npm-run-all build server",
    "server": "node -r dotenv/config ./dist/bin/www",
    "start": "npm run dev:watch",
    "start:prod": "npm run prod",
    "transpile": "babel ./server --out-dir dist"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.18.2",
    "morgan": "~1.9.1",
    "newsapi": "^2.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ]
  }
}
